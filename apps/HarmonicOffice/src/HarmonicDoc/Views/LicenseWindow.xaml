<Window x:Class="HarmonicDoc.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License"
        Width="520"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI">

    <Border Background="{StaticResource BgPrimaryBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="{StaticResource BgSecondaryBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Button Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"
                            Content="&#x2715;"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="32,20,32,32">

                    <!-- Product Name -->
                    <TextBlock Text="Harmonic Doc"
                               Foreground="{StaticResource PrimaryBrush}"
                               FontSize="22"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,24"/>

                    <!-- Current Plan Section -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="現在のプラン"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="PlanText"
                                   Text="FREE"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="36"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4"/>
                        <TextBlock x:Name="ExpiryText"
                                   Text="有効期限: -"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Feature List -->
                    <Border Background="{StaticResource BgCardBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20,16"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="機能一覧"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"/>
                            <StackPanel x:Name="FeatureList"/>
                        </StackPanel>
                    </Border>

                    <!-- License Input Section -->
                    <Border Background="{StaticResource BgCardBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20,16"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="ライセンス認証"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,16"/>

                            <!-- Email -->
                            <TextBlock Text="メールアドレス"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBox x:Name="EmailInput"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     Margin="0,0,0,12"/>

                            <!-- License Key -->
                            <TextBlock Text="ライセンスキー"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,4"/>
                            <TextBox x:Name="KeyInput"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     KeyDown="KeyInput_KeyDown"
                                     Margin="0,0,0,16"/>

                            <!-- Buttons -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="クリア"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="Clear_Click"
                                        Margin="0,0,8,0"/>
                                <Button Content="アクティベート"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="Activate_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Status Message -->
                    <TextBlock x:Name="StatusMessage"
                               Text=""
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
