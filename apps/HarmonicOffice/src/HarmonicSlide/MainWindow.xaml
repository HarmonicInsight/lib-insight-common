<Window x:Class="HarmonicSlide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Harmonic Slide"
        Width="1280" Height="720"
        MinWidth="800" MinHeight="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{StaticResource BgPrimaryBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- ═══ Title Bar ═══ -->
            <Border Grid.Row="0"
                    Background="{StaticResource BgSecondaryBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Left: Product Name + Version + Plan Badge -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="16,0,0,0">
                        <TextBlock Text="Harmonic Slide"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="v1.0.0"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   FontSize="12"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                        <Border Background="{StaticResource PrimaryLightBrush}"
                                CornerRadius="4"
                                Padding="8,2"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock x:Name="PlanBadgeText"
                                       Text="FREE"
                                       Foreground="{StaticResource TextAccentBrush}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI" />
                        </Border>
                    </StackPanel>

                    <!-- Right: Language Toggle + License + Window Controls -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,4,0">
                        <!-- Language Toggle -->
                        <Button x:Name="LanguageButton"
                                Content="English"
                                Style="{StaticResource TitleBarButtonStyle}"
                                Click="LanguageToggle_Click"
                                Margin="0,0,4,0" />

                        <!-- License Button -->
                        <Button Style="{StaticResource TitleBarButtonStyle}"
                                Click="LicenseButton_Click"
                                Margin="0,0,8,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#x1F511;"
                                           FontSize="13"
                                           VerticalAlignment="Center"
                                           Margin="0,0,6,0" />
                                <TextBlock x:Name="LicenseButtonText"
                                           Text="ライセンス"
                                           FontSize="13"
                                           FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>

                        <!-- Minimize -->
                        <Button Style="{StaticResource WindowControlButtonStyle}"
                                Click="MinimizeButton_Click"
                                Content="&#x2500;"
                                FontSize="14" />

                        <!-- Maximize -->
                        <Button Style="{StaticResource WindowControlButtonStyle}"
                                Click="MaximizeButton_Click"
                                Content="&#x25A1;"
                                FontSize="14" />

                        <!-- Close -->
                        <Button Style="{StaticResource CloseButtonStyle}"
                                Click="CloseButton_Click"
                                Content="&#x2715;"
                                FontSize="14" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ═══ Content Area ═══ -->
            <Grid Grid.Row="1" Margin="24">
                <Border Background="{StaticResource BgCardBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="32">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Section Title -->
                        <TextBlock Grid.Row="0"
                                   Text="Slide Operations"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   Margin="0,0,0,8" />

                        <TextBlock Grid.Row="1"
                                   Text="PowerPoint ファイルの操作・変換を行います"
                                   FontSize="14"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   Margin="0,0,0,24" />

                        <!-- Operation Buttons -->
                        <WrapPanel Grid.Row="2"
                                   Orientation="Horizontal"
                                   VerticalAlignment="Top">
                            <Button Content="Open PPTX"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,0,12,12" />
                            <Button Content="Extract Slides"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,12,12" />
                            <Button Content="Generate PDF"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,12,12" />
                            <Button Content="Batch Processing"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,12,12" />
                            <Button Content="Template"
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,12,12" />
                        </WrapPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
