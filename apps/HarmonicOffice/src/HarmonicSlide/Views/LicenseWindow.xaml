<Window x:Class="HarmonicSlide.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License - Harmonic Slide"
        Width="520"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="{StaticResource BgPrimaryBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- ═══ Title Bar ═══ -->
            <Border Grid.Row="0"
                    Background="{StaticResource BgSecondaryBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="License"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="13"
                               FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center" />
                    <Button Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"
                            Content="&#x2715;"
                            FontSize="12"
                            HorizontalAlignment="Right"
                            Width="40" Height="32" />
                </Grid>
            </Border>

            <!-- ═══ Content ═══ -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="32,24,32,32">

                    <!-- Product Name -->
                    <TextBlock Text="Harmonic Slide"
                               Foreground="{StaticResource PrimaryBrush}"
                               FontSize="22"
                               FontWeight="SemiBold"
                               FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,24" />

                    <!-- Current Plan Display -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,8">
                        <TextBlock Text="現在のプラン"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,4" />
                        <TextBlock x:Name="PlanText"
                                   Text="FREE"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="36"
                                   FontWeight="SemiBold"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   HorizontalAlignment="Center" />
                        <TextBlock x:Name="ExpiryText"
                                   Text="有効期限: -"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="13"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0" />
                    </StackPanel>

                    <!-- Feature List Section -->
                    <Border Background="{StaticResource BgSecondaryBrush}"
                            CornerRadius="12"
                            Padding="20,16"
                            Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="機能一覧"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                       Margin="0,0,0,12" />
                            <StackPanel x:Name="FeatureList" />
                        </StackPanel>
                    </Border>

                    <!-- License Input Card -->
                    <Border Background="{StaticResource BgCardBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20,16"
                            Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="ライセンス認証"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                       Margin="0,0,0,16" />

                            <!-- Email Input -->
                            <TextBlock Text="メールアドレス"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="EmailInput"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     Margin="0,0,0,16" />

                            <!-- License Key Input -->
                            <TextBlock Text="ライセンスキー"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="12"
                                       FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                       Margin="0,0,0,6" />
                            <TextBox x:Name="KeyInput"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     KeyDown="KeyInput_KeyDown"
                                     Margin="0,0,0,20" />

                            <!-- Buttons -->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="クリア"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="Clear_Click"
                                        Margin="0,0,12,0" />
                                <Button Content="アクティベート"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="Activate_Click" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Status Message -->
                    <TextBlock x:Name="StatusMessage"
                               Text=""
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="13"
                               FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,16,0,0" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
