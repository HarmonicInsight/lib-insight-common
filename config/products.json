  "tiers": {
    "TRIAL": {
      "name": "Trial",
      "duration": 14,
      "durationUnit": "days",
      "features": ["basic"],
      "limits": {
        "apiCalls": 100,
        "storage": "100MB"
      }
    },
    "STD": {
      "name": "Standard",
      "duration": 365,
      "durationUnit": "days",
      "features": ["basic", "standard"],
      "limits": {
        "apiCalls": 10000,
        "storage": "5GB"
      }
    },
    "PRO": {
      "name": "Professional",
      "duration": 365,
      "durationUnit": "days",
      "features": ["basic", "standard", "professional"],
      "limits": {
        "apiCalls": 100000,
        "storage": "50GB"
      }
    },
    "ENT": {
      "name": "Enterprise",
      "duration": null,
      "durationUnit": "perpetual",
      "features": ["basic", "standard", "professional", "enterprise"],
      "limits": {
        "apiCalls": "unlimited",
        "storage": "unlimited"
      }
    }
  },
  "featureFlags": {
    "basic": [
      "core-functionality",
      "local-processing"
    ],
    "standard": [
      "cloud-sync",
      "export-basic"
    ],
    "professional": [
      "team-collaboration",
      "advanced-analytics",
      "export-advanced",
      "api-access"
    ],
    "enterprise": [
      "sso",
      "audit-logs",
      "custom-deployment",
      "priority-support",
      "sla"
    ]
