<Window x:Class="HarmonicTools.LicenseManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HarmonicTools.LicenseManager"
        Title="Harmonic License Manager"
        Icon="Assets/app.ico"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">
    <Border Background="{StaticResource BgPrimaryBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource BgSecondaryBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                        <Image Source="Assets/app.ico" Width="20" Height="20" Margin="0,0,8,0" RenderOptions.BitmapScalingMode="HighQuality" />
                        <TextBlock Text="Harmonic License Manager"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   FontSize="15" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="v1.0"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   FontSize="11"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                        <Button Content="─" Click="Minimize_Click" Width="36" Height="36"
                                Background="Transparent" BorderThickness="0" FontSize="14"
                                Foreground="{StaticResource TextSecondaryBrush}" Cursor="Hand"/>
                        <Button Content="□" Click="Maximize_Click" Width="36" Height="36"
                                Background="Transparent" BorderThickness="0" FontSize="14"
                                Foreground="{StaticResource TextSecondaryBrush}" Cursor="Hand"/>
                        <Button Content="✕" Click="Close_Click" Width="36" Height="36"
                                Background="Transparent" BorderThickness="0" FontSize="12"
                                Foreground="{StaticResource TextSecondaryBrush}" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- License Generation Form -->
                <Border Grid.Row="0" Background="{StaticResource BgCardBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                        CornerRadius="8" Padding="20,16" Margin="0,0,0,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="ライセンス発行"
                                   FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                   FontSize="18" FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,12"/>

                        <!-- Input Row 1 -->
                        <Grid Grid.Row="1" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="製品" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="ProductCombo"
                                          FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                          FontSize="13" Padding="6,6"
                                          SelectionChanged="ProductCombo_SelectionChanged"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="プラン" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="PlanCombo"
                                          FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                          FontSize="13" Padding="6,6"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="メールアドレス" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="EmailBox" Style="{StaticResource InputBox}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Input Row 2 -->
                        <Grid Grid.Row="2" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="有効期限 年 (YY)" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="YearBox" Style="{StaticResource InputBox}"
                                         Width="80" Text="27"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="月 (MM)" Style="{StaticResource FieldLabel}"/>
                                <ComboBox x:Name="MonthCombo"
                                          FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                          FontSize="13" Padding="6,6" Width="80"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="備考" Style="{StaticResource FieldLabel}"/>
                                <TextBox x:Name="NoteBox" Style="{StaticResource InputBox}" Width="200"/>
                            </StackPanel>

                            <Button Grid.Column="6" Content="ライセンスキーを生成"
                                    Style="{StaticResource PrimaryButton}"
                                    VerticalAlignment="Bottom"
                                    Click="Generate_Click"/>
                        </Grid>

                        <!-- Generated Key Display -->
                        <Border Grid.Row="3" Background="#1C1917" CornerRadius="6" Padding="12,8"
                                Visibility="{Binding ElementName=GeneratedKeyText, Path=Text, Converter={x:Static local:StringToVisibilityConverter.Instance}}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="GeneratedKeyText"
                                           FontFamily="Consolas, Cascadia Code"
                                           FontSize="16" FontWeight="Bold"
                                           Foreground="#F0E6C8"
                                           VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="コピー" Style="{StaticResource SecondaryButton}"
                                            Padding="12,4" Click="CopyKey_Click"
                                            Foreground="White" BorderBrush="#57534E"/>
                                    <TextBlock x:Name="VerifyBadge" Text=""
                                               FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                               FontSize="11" VerticalAlignment="Center"
                                               Margin="12,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Issued License History -->
                <Border Grid.Row="1" Background="{StaticResource BgCardBrush}"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                        CornerRadius="8" Padding="16,12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <TextBlock Text="発行履歴"
                                       FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                       FontSize="15" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="CSV エクスポート" Style="{StaticResource SecondaryButton}"
                                        Padding="12,4" Click="ExportCsv_Click"/>
                                <Button Content="選択を削除" Style="{StaticResource DangerButton}"
                                        Padding="12,4" Margin="8,0,0,0" Click="DeleteRecord_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- License List -->
                        <DataGrid x:Name="LicenseGrid" Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                                  FontFamily="Segoe UI Variable, Segoe UI, Yu Gothic UI"
                                  FontSize="12"
                                  RowBackground="{StaticResource BgCardBrush}"
                                  AlternatingRowBackground="{StaticResource BgPrimaryBrush}"
                                  HeadersVisibility="Column"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="発行日" Binding="{Binding IssuedAtDisplay}" Width="130"/>
                                <DataGridTextColumn Header="製品" Binding="{Binding ProductCode}" Width="60"/>
                                <DataGridTextColumn Header="製品名" Binding="{Binding ProductName}" Width="140"/>
                                <DataGridTextColumn Header="プラン" Binding="{Binding Plan}" Width="60"/>
                                <DataGridTextColumn Header="メール" Binding="{Binding Email}" Width="180"/>
                                <DataGridTextColumn Header="有効期限" Binding="{Binding ExpiryDisplay}" Width="80"/>
                                <DataGridTextColumn Header="キー" Binding="{Binding Key}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
