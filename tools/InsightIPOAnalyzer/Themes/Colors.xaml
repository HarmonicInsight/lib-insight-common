<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================== -->
    <!-- Ivory & Gold Theme - HARMONIC insight      -->
    <!-- Primary: Gold (#B8942F)                    -->
    <!-- Background: Ivory (#FAF8F5)                -->
    <!-- ========================================== -->

    <!-- === Background (Ivory) === -->
    <Color x:Key="BgPrimaryColor">#FAF8F5</Color>
    <Color x:Key="BgSecondaryColor">#F3F0EB</Color>
    <Color x:Key="BgCardColor">#FFFFFF</Color>
    <Color x:Key="BgHoverColor">#EEEBE5</Color>

    <!-- === Brand Primary (Gold) === -->
    <Color x:Key="PrimaryColor">#B8942F</Color>
    <Color x:Key="PrimaryHoverColor">#8C711E</Color>
    <Color x:Key="PrimaryLightColor">#F0E6C8</Color>
    <Color x:Key="PrimaryVeryLightColor">#FDF9EF</Color>

    <!-- === Semantic === -->
    <Color x:Key="SuccessColor">#16A34A</Color>
    <Color x:Key="WarningColor">#CA8A04</Color>
    <Color x:Key="ErrorColor">#DC2626</Color>
    <Color x:Key="InfoColor">#2563EB</Color>

    <!-- === Text === -->
    <Color x:Key="TextPrimaryColor">#1C1917</Color>
    <Color x:Key="TextSecondaryColor">#57534E</Color>
    <Color x:Key="TextTertiaryColor">#A8A29E</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>

    <!-- === Border === -->
    <Color x:Key="BorderColor">#E7E2DA</Color>
    <Color x:Key="BorderLightColor">#F3F0EB</Color>
    <Color x:Key="BorderFocusColor">#B8942F</Color>

    <!-- === IPO Node Colors === -->
    <Color x:Key="InputSectionColor">#E8F5E9</Color>
    <Color x:Key="ProcessSectionColor">#FFF8E1</Color>
    <Color x:Key="OutputSectionColor">#E3F2FD</Color>
    <Color x:Key="InputHeaderColor">#388E3C</Color>
    <Color x:Key="ProcessHeaderColor">#F9A825</Color>
    <Color x:Key="OutputHeaderColor">#1976D2</Color>
    <Color x:Key="SubAnalysisIndicatorColor">#B8942F</Color>

    <!-- === Selection === -->
    <Color x:Key="SelectionColor">#B8942F</Color>
    <Color x:Key="SelectionLightColor">#F0E6C8</Color>

    <!-- === Canvas === -->
    <Color x:Key="CanvasBackgroundColor">#FAFAF8</Color>
    <Color x:Key="CanvasGridColor">#F0EDE8</Color>
    <Color x:Key="ConnectionLineColor">#A8A29E</Color>

    <!-- ========================================== -->
    <!-- SolidColorBrush Definitions                -->
    <!-- ========================================== -->

    <!-- Background -->
    <SolidColorBrush x:Key="BgPrimaryBrush" Color="{StaticResource BgPrimaryColor}"/>
    <SolidColorBrush x:Key="BgSecondaryBrush" Color="{StaticResource BgSecondaryColor}"/>
    <SolidColorBrush x:Key="BgCardBrush" Color="{StaticResource BgCardColor}"/>
    <SolidColorBrush x:Key="BgHoverBrush" Color="{StaticResource BgHoverColor}"/>

    <!-- Brand -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryVeryLightBrush" Color="{StaticResource PrimaryVeryLightColor}"/>

    <!-- Semantic -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>

    <!-- Border -->
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="{StaticResource BorderFocusColor}"/>

    <!-- IPO Sections -->
    <SolidColorBrush x:Key="InputSectionBrush" Color="{StaticResource InputSectionColor}"/>
    <SolidColorBrush x:Key="ProcessSectionBrush" Color="{StaticResource ProcessSectionColor}"/>
    <SolidColorBrush x:Key="OutputSectionBrush" Color="{StaticResource OutputSectionColor}"/>
    <SolidColorBrush x:Key="InputHeaderBrush" Color="{StaticResource InputHeaderColor}"/>
    <SolidColorBrush x:Key="ProcessHeaderBrush" Color="{StaticResource ProcessHeaderColor}"/>
    <SolidColorBrush x:Key="OutputHeaderBrush" Color="{StaticResource OutputHeaderColor}"/>
    <SolidColorBrush x:Key="SubAnalysisIndicatorBrush" Color="{StaticResource SubAnalysisIndicatorColor}"/>

    <!-- Selection -->
    <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionColor}"/>
    <SolidColorBrush x:Key="SelectionLightBrush" Color="{StaticResource SelectionLightColor}"/>

    <!-- Canvas -->
    <SolidColorBrush x:Key="CanvasBackgroundBrush" Color="{StaticResource CanvasBackgroundColor}"/>
    <SolidColorBrush x:Key="CanvasGridBrush" Color="{StaticResource CanvasGridColor}"/>
    <SolidColorBrush x:Key="ConnectionLineBrush" Color="{StaticResource ConnectionLineColor}"/>

</ResourceDictionary>
