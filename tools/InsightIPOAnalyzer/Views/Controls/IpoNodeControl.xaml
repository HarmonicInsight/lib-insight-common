<UserControl x:Class="InsightIPOAnalyzer.Views.Controls.IpoNodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:InsightIPOAnalyzer.Helpers"
             MinWidth="420" MinHeight="160">

    <UserControl.Resources>
        <helpers:HasSubAnalysisConverter x:Key="HasSubAnalysisConverter"/>

        <!-- Small add button -->
        <Style x:Key="SmallAddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="Transparent" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource BgHoverBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Remove button -->
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Visibility" Value="Hidden"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="Transparent" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ErrorBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Drill-down button -->
        <Style x:Key="DrillDownButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SubAnalysisIndicatorBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ToolTip" Value="サブ分析にドリルダウン"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="Transparent" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PrimaryLightBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Item row hover trigger -->
        <Style x:Key="ItemRowStyle" TargetType="Border">
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#10000000"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <!-- Main node border with selection support -->
    <Border x:Name="NodeBorder"
            Background="{StaticResource BgCardBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8"
            SnapsToDevicePixels="True"
            Effect="{x:Null}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Node Header (draggable) -->
            <Border x:Name="NodeHeader"
                    Grid.Row="0"
                    Background="{StaticResource BgSecondaryBrush}"
                    CornerRadius="8,8,0,0"
                    Padding="12,8"
                    Cursor="SizeAll"
                    MouseLeftButtonDown="NodeHeader_MouseLeftButtonDown"
                    MouseMove="NodeHeader_MouseMove"
                    MouseLeftButtonUp="NodeHeader_MouseLeftButtonUp">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="NodeNameText"
                               Grid.Column="0"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1"
                               Text="..."
                               FontSize="16"
                               Foreground="{StaticResource TextTertiaryBrush}"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"
                               Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- IPO Sections -->
            <Grid Grid.Row="1" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.2*" MinWidth="140"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="120"/>
                </Grid.ColumnDefinitions>

                <!-- INPUT Section -->
                <Border Grid.Column="0"
                        Background="{StaticResource InputSectionBrush}"
                        CornerRadius="0,0,0,8"
                        Padding="8,4,8,8">
                    <StackPanel>
                        <!-- Section Header -->
                        <Border Background="{StaticResource InputHeaderBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,0,6">
                            <TextBlock Text="INPUT"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <!-- Items -->
                        <ItemsControl x:Name="InputsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ItemRowStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="&#x25CF; " FontSize="8" Foreground="#388E3C" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding DataType}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Visibility="{Binding DataType, Converter={StaticResource HasSubAnalysisConverter}}"/>
                                            </StackPanel>
                                            <Button Grid.Column="2" Content="x" Style="{StaticResource RemoveButtonStyle}" Click="RemoveInput_Click" Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button x:Name="AddInputButton" Content="+ 追加" Style="{StaticResource SmallAddButtonStyle}" Click="AddInput_Click" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Arrow I→P -->
                <Border Grid.Column="1" Width="24" VerticalAlignment="Center">
                    <Path Data="M0,8 L16,8 L12,4 M16,8 L12,12"
                          Stroke="{StaticResource ConnectionLineBrush}"
                          StrokeThickness="2"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Border>

                <!-- PROCESS Section -->
                <Border Grid.Column="2"
                        Background="{StaticResource ProcessSectionBrush}"
                        Padding="8,4,8,8">
                    <StackPanel>
                        <!-- Section Header -->
                        <Border Background="{StaticResource ProcessHeaderBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,0,6">
                            <TextBlock Text="PROCESS"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <!-- Steps -->
                        <ItemsControl x:Name="ProcessStepsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ItemRowStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,4,0">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}.">
                                                        <Binding Path="Order"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                            <Button Grid.Column="2" Content="&#x25B6;" Style="{StaticResource DrillDownButtonStyle}" Click="DrillDown_Click" Tag="{Binding}" ToolTip="サブ分析へドリルダウン"/>
                                            <Button Grid.Column="3" Content="x" Style="{StaticResource RemoveButtonStyle}" Click="RemoveStep_Click" Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button x:Name="AddStepButton" Content="+ 追加" Style="{StaticResource SmallAddButtonStyle}" Click="AddStep_Click" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Arrow P→O -->
                <Border Grid.Column="3" Width="24" VerticalAlignment="Center">
                    <Path Data="M0,8 L16,8 L12,4 M16,8 L12,12"
                          Stroke="{StaticResource ConnectionLineBrush}"
                          StrokeThickness="2"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                </Border>

                <!-- OUTPUT Section -->
                <Border Grid.Column="4"
                        Background="{StaticResource OutputSectionBrush}"
                        CornerRadius="0,0,8,0"
                        Padding="8,4,8,8">
                    <StackPanel>
                        <!-- Section Header -->
                        <Border Background="{StaticResource OutputHeaderBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                Margin="0,0,0,6">
                            <TextBlock Text="OUTPUT"
                                       FontSize="11"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        <!-- Items -->
                        <ItemsControl x:Name="OutputsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ItemRowStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="&#x25CF; " FontSize="8" Foreground="#1976D2" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}" TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Text="{Binding DataType}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Visibility="{Binding DataType, Converter={StaticResource HasSubAnalysisConverter}}"/>
                                            </StackPanel>
                                            <Button Grid.Column="2" Content="x" Style="{StaticResource RemoveButtonStyle}" Click="RemoveOutput_Click" Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Button x:Name="AddOutputButton" Content="+ 追加" Style="{StaticResource SmallAddButtonStyle}" Click="AddOutput_Click" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
    </Border>
</UserControl>
